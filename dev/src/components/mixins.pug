mixin news-content (image_url, title, source, datetime, date, time, comments_count, views_count)
	.news__item.small-4.grid-y.align-justify
		.news__top
			div(
				class='news__img'
				style='background-image: url(./assets/img/news__content/' + image_url + ');'
				)
			h3
				a(href='#' class='news__heading')= title
		.news__info.grid-x
			+source-color(source, datetime, date, time)
			+comments(comments_count, views_count)