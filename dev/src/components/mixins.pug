mixin time (datetime, weekday, date, time)
	time(datetime=datetime).current__datetime
		span.current__weekday= weekday
		span.current__date= date

mixin source (source, datetime, date, time)
	case source
		when 'day'
			a(href='#' title='Читати всі новини з даного розділу' class= 'content__source tsn__day') ТСН День
		when 'world'
			a(href='#' title='Читати всі новини з даного розділу' class= 'content__source tsn__world') Світ
		when 'ukraine'
			a(href='#' title='Читати всі новини з даного розділу' class= 'content__source tsn__ukraine') Україна
		when 'glamour'
			a(href='#' title='Читати всі новини з даного розділу' class= 'content__source tsn__glamour') Гламур
		when 'money'
			a(href='#' title='Читати всі новини з даного розділу' class= 'content__source tsn__money') Гроші

	time(datetime=datetime).content__datetime.tsn__default
		span.content__date= date
		span.content__time= time

mixin weather (icon, city, temperature)
	.current__weather.grid-x.aligh-middle
		i(class='weather__icon wi ' + icon)
		.weather__description
			span.weather__city= city
			span.weather__temp!= temperature + '&deg;C'

