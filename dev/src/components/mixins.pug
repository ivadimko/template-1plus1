mixin tabs(count)
	- var n = 1
	while n <= count
		span(class= 'header__tab js__tab tab-' + n++)
mixin tab__content(type, content_url, heading, source, datetime, date, time)
	.tab__content.js__tab-content
		case type
			when 'video'
				h1 wait!
			when 'photo'
				div(
					class='content__bg'
					style='background-image: url(./assets/img/header__content/' + content_url + ');'
					)
		.content__info
			h2.content__heading
				a(href='#' title='Читати повний текст новини').content__heading-link= heading
			+source-color(source, datetime, date, time)

